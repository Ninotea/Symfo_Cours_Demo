{% extends 'base.html.twig' %}

{% block body %}
    <h1>Page de test mémore !</h1>
    <div>
        <div>{{ mySerie.title }} {{ autreVar }}</div>
        <div>{{ mySerie.title |raw }} {{ autreVar }}</div>
        <br>
        <div>
            {{ "+1 year" | date("Y") }} <br>
            {{ "now" | date("Y") }}
        </div>

        {# créer une variable #}
        {% set name = "Guillaume" %}
        <h2>{{ name | upper }}</h2>
        <p>Contient {{ name | length }} lettres.</p>

        {# creation de tableau #}
        {% set colors =["orange", "brown", "turquoise", "blue"] %}
        <div> Nombre de couleurs : {{ colors | length }}</div>
        <div> {{ colors | join(' / ') }}</div>
        {% for color in colors %}
            <div style="background-color: {{ color }}">
                Nous sommes sur l'élément n°{{ loop.index }} qui vaut "{{ color }}".
                {% if loop.last %}
                <br> L'élément "{{ color }}" est le dernier élément du tableau colors.
                {% endif %}
            </div>
        {% endfor %}

        {# Un objet #}
        {% set book = {
            title :'pifpaf',
            year : 2000,
            author : "John Doe"}
        %}
        <h3>{{ book.author }}</h3>
        <div>
            {% for key, val in book %}
                <div>{{ key }} : {{ val }}</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}